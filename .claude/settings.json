{
  "editor": {
    "tabSize": 4,
    "insertSpaces": true
  },
  "python": {
    "pythonPath": "python",
    "linting": {
      "enabled": true,
      "pylintEnabled": false,
      "flake8Enabled": true
    },
    "formatting": {
      "provider": "black"
    }
  },
  "files": {
    "exclude": {
      "**/__pycache__": true,
      "**/*.pyc": true,
      "**/.pytest_cache": true,
      "**/data/chroma_db": true,
      "**/.venv": true
    }
  }
}
